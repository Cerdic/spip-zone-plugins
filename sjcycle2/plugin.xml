	<prefix>sjcycle</prefix>
	<install>base/sjcycle_install.php</install>
	<fonctions>sjcycle_fonctions.php</fonctions>
	<options>sjcycle_options.php</options>
	<pipeline>
		<nom>insert_head</nom>
		<inclure>sjcycle_pipelines.php</inclure>
	</pipeline>
	<pipeline>
		<nom>header_prive</nom>
