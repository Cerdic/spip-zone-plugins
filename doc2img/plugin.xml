<plugin>
	<nom><multi>[fr]Documents en Images[en]Documents to images</multi></nom>
	<auteur>Camille Lafitte</auteur>
	<version>1.0</version>
	<etat>stable</etat>
    <description><multi>
    	[fr]Ce plugin permet de convertir &#224; la vol&#232;e des pdf, tiff en image. Ces images sont ensuite exploitable via une boucle.
		[en]This plugin will convert on the fly pdf, tiff ... documents in image(s). These images can then be exploited via a loop.
	</multi></description>
    <lien>http://www.spip-contrib.net/doc2img</lien>
	<icon>images/doc2img-128.png</icon>
    <prefix>doc2img</prefix>
	<install>base/doc2img_install.php</install>
    <fonctions>doc2img_fonctions.php</fonctions>
	<version_base>0.92</version_base>

	<pipeline>
		<nom>declarer_tables_principales</nom>
		<inclure>base/doc2img.php</inclure>
	</pipeline>
	<pipeline>
		<nom>declarer_tables_interfaces</nom>
		<inclure>base/doc2img.php</inclure>
	</pipeline>
    <pipeline>
       <nom>affiche_gauche</nom>
       <inclure>doc2img_pipeline.php</inclure>
   </pipeline>
    <pipeline>
       <nom>post_edition</nom>
       <inclure>doc2img_pipeline.php</inclure>
   </pipeline>

	<necessite id="SPIP" version="[2.1.0;]" />
	<necessite id="cfg" version="[1.9;]" />
   <categorie>edition</categorie>
</plugin>
