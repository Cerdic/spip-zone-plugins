<?xml version="1.0" encoding="ISO-8859-1"?>
<plugin>
    <!-- Nom du plugin -->
    <nom>doc2img</nom>

    <!-- Auteur du plugin -->
    <auteur>Camille Lafitte</auteur>
    <version>0.91</version>
    <etat>dev</etat>
    <icon></icon>
    <description> Ce plugin permet de convertir &#224; la vol&egrave;e des pdf, tiff en image. Ces images sont ensuite exploitable via une boucle .</description>
    <!-- URI de documentation -->
    <lien>http://www.spip-contrib.net/doc2img</lien>

    <!-- precise le prefixe utilis+ pour toutes les fonctions du plugin, en general le nom du plugin -->
    <prefix>doc2img</prefix>

    <!-- Chemin du fichier d'installation et de mise à jour -->
    <install>base/doc2img_install.php</install>

   <!-- précise les dependances vis-a-vis de d'autres plugins -->
    <necessite id="SPIP" version="[1.9.0;]" />
    <necessite id="cfg" version="[1.9;]" />

    <!-- mes options -->
    <options>doc2img_options.php</options>

    <!-- mes fonctions -->
    <fonctions>doc2img_fonctions.php</fonctions>

    <!-- appelle les pipelines -->
    <pipeline>
       <!-- voir la page sur doc.spip.org, pour connaitre l'ensemble des pipeline -->
       <nom>affiche_gauche</nom>
       <!-- nom de la fonction a appelé sans son prefixe -->
       <action>affiche_gauche</action>
       <!-- chemin du fichier contenant la fonction -->
       <inclure>pipeline.php</inclure>
   </pipeline>

    <pipeline>
       <!-- voir la page sur doc.spip.org, pour connaitre l'ensemble des pipeline -->
       <nom>post_edition</nom>
       <!-- nom de la fonction a appelé sans son prefixe -->
       <action>post_edition</action>
       <!-- chemin du fichier contenant la fonction -->
       <inclure>pipeline.php</inclure>
   </pipeline>   
    
   <chemin dir='.' type="prive"/>    
   <chemin dir='.' type="public"/>   
   <chemin dir='./prive' type="prive"/>
   <categorie>edition</categorie>
</plugin>
