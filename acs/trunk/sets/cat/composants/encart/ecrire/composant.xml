<composant>
  <!-- Nom du composant -->
  <nom>Encart</nom>
  <!-- Auteur du composant -->
  <auteur>Daniel FAIVRE &copy; 2008-2015 - licence GPL</auteur>
  <version>0.8.7</version>
  <necessite id='acs' version='[0.8.0;]' />
  <group>content</group>

  <param>
    <nom>preview</nom>
    <valeur>200</valeur>
  </param>
  <param>
		<nom>instanciable</nom>
  </param>

  <variable>
    <nom>Nom</nom>
    <type>text</type>
  </variable>

  <variable>
    <nom>TitreFond</nom>
    <type>color</type>
  </variable>
  <variable>
    <nom>TitreFondImage</nom>
    <type>img</type>
    <chemin>trame</chemin>
    <label>non</label>
  </variable>
  <variable>
    <nom>Fond</nom>
    <type>color</type>
  </variable>
  <variable>
    <nom>Bord</nom>
    <type>bord</type>
  </variable>
  <variable>
    <nom>BordRond</nom>
    <type>text</type>
  </variable>

  <variable>
    <nom>Shadow</nom>
    <type>color</type>
  </variable>
  <variable>
    <nom>ShadowSize</nom>
    <type>text</type>
  </variable>
  <variable>
  	<nom>ShadowBlur</nom>
    <type>text</type>
  </variable>

  <variable>
    <nom>Type</nom>
    <type>choix</type>
    <option>articles</option>
    <option>rubriques</option>
    <value>articles</value>
  </variable>
  <variable>
    <nom>SouligneRub</nom>
    <type>choix</type>
    <option>oui</option>
    <option>non</option>
    <value>oui</value>
  </variable>
  <variable>
    <nom>SouligneRubHeight</nom>
    <type>LargeurBord</type>
  </variable>
  <variable>
    <nom>Key</nom>
    <type>key</type>
  </variable>
  <variable>
    <nom>Nb</nom>
    <type>text</type>
    <valeur>3</valeur>
  </variable>
  <variable>
    <nom>NbLettres</nom>
    <type>text</type>
  </variable>
  <variable>
    <nom>LogoTailleMax</nom>
    <type>text</type>
    <valeur>100</valeur>
  </variable>
  <variable>
    <nom>Date</nom>
    <type>choix</type>
    <option>oui</option>
    <option>non</option>
    <valeur>oui</valeur>
  </variable>
</composant>