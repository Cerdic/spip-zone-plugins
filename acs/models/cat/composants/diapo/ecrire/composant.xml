    <type>text</type>
    <valeur>100</valeur>
  </variable>
  <variable>
    <nom>Height</nom>
    <type>text</type>
    <valeur>75</valeur>
  </variable>
  <variable>
    <nom>Fond</nom>
    <type>color</type>
  </variable>
  <variable>
    <nom>Bord</nom>
    <type>bord</type>
