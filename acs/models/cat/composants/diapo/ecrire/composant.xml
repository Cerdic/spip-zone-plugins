  <variable>
    <nom>ImgGon</nom>
    <type>img</type>
    <chemin>diapo</chemin>
    <valeur>filmgon.gif</valeur>
  </variable>
  <variable>
    <nom>ImgDoff</nom>
    <type>img</type>
