    <nom>Img</nom>
    <type>img</type>
    <chemin>diapo</chemin>
    <valeur>pellicule.png</valeur>
  </variable>
  <variable>
    <nom>ImgG</nom>
    <type>img</type>
    <chemin>diapo</chemin>
    <valeur>filmg.gif</valeur>
