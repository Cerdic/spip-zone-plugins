<composant>
  <!-- Nom du composant -->
  <nom>Bandeau</nom>
  <!-- Auteur du composant -->
  <auteur>Daniel FAIVRE &copy; 2008-2010 - licence GPL</auteur>
  <version>0.6</version>
  <necessite id='acs' version='[0.6;]' />

  <param>
    <nom>preview</nom>
    <valeur>88</valeur>
  </param>

  <variable>
    <nom>Fond</nom>
    <type>color</type>
  </variable>
  <variable>
    <nom>TextColor</nom>
    <type>color</type>
  </variable>
  <variable>
    <nom>Bord</nom>
    <type>bord</type>
  </variable>
  <variable>
    <nom>BordBas</nom>
    <type>color</type>
  </variable>
  <variable>
    <nom>FontSize</nom>
    <type>nombre</type>
		<valeur>1em</valeur>
  </variable>

  <variable>
    <nom>Legende</nom>
    <type>text</type>
    <taille>80</taille>
  </variable>
  <variable>
    <nom>Alignement</nom>
    <type>choix</type>
    <option>left</option>
    <option>center</option>
    <option>right</option>
    <valeur>center</valeur>
  </variable>
  <variable>
    <nom>Contenu</nom>
    <type>textarea</type>
    <lines>3</lines>
  </variable>
  <variable>
    <nom>Text2</nom>
    <type>textarea</type>
    <lines>2</lines>
  </variable>
</composant>