<composant>
  <!-- Nom du composant -->
  <nom>Carte</nom>
  <!-- Auteur du composant -->
  <auteur>Daniel FAIVRE &copy; 2008-2011 - licence GPL</auteur>
  <version>0.8.1</version>
  <necessite id='acs' version='[0.7.1;]' />
  <necessite id='gis' version='[0.7.1;]' />
  <necessite id='openlayers' version='[0.7.1;]' />

  <param>
    <nom>preview</nom>
    <valeur>400</valeur>
  </param>
  <param>
    <nom>preview_type</nom>
    <valeur>inline</valeur>
  </param>  
  <param>
    <nom>instanciable</nom>
  </param>

  <variable>
    <nom>Nom</nom>
    <type>text</type>
  </variable>
  <variable>
    <nom>Lat</nom>
    <type>nombre</type>
  </variable>
  <variable>
    <nom>Lon</nom>
    <type>nombre</type>
  </variable>
  <variable>
    <nom>Zoom</nom>
    <type>nombre</type>
  </variable>

  <variable>
    <nom>ShowLayerSwitcher</nom>
    <type>choix</type>
    <option>oui</option>
    <option>non</option>
    <valeur>oui</valeur>
  </variable>
  <variable>
    <nom>OpenStreetMap</nom>
    <type>choix</type>
    <option>oui</option>
    <option>non</option>
    <valeur>oui</valeur>
  </variable>
  <variable>
    <nom>Osmarender</nom>
    <type>choix</type>
    <option>oui</option>
    <option>non</option>
    <valeur>oui</valeur>
  </variable>
  <variable>
    <nom>WMS</nom>
    <type>choix</type>
    <option>oui</option>
    <option>non</option>
    <valeur>oui</valeur>
  </variable>
  
  <variable>
    <nom>gPhy</nom>
    <type>choix</type>
    <option>oui</option>
    <option>non</option>
    <valeur>oui</valeur>
  </variable>
  <variable>
    <nom>gMap</nom>
    <type>choix</type>
    <option>oui</option>
    <option>non</option>
    <valeur>oui</valeur>
  </variable>
  <variable>
    <nom>gHyb</nom>
    <type>choix</type>
    <option>oui</option>
    <option>non</option>
    <valeur>oui</valeur>
  </variable>
  <variable>
    <nom>gSat</nom>
    <type>choix</type>
    <option>oui</option>
    <option>non</option>
    <valeur>oui</valeur>
  </variable>

  <variable>
    <nom>Picto</nom>
    <type>img</type>
    <chemin>pictos</chemin>
    <valeur>interrogation.png</valeur>
  </variable>
  <variable>
    <nom>PictoHover</nom>
    <type>img</type>
    <chemin>pictos</chemin>
    <valeur>interrogation_over.png</valeur>
  </variable>
  <variable>
    <nom>PictosPins</nom>
    <type>choix</type>
    <option>oui</option>
    <option>non</option>
    <valeur>non</valeur>
  </variable>
  
  <variable>
    <nom>TitreFontSize</nom>
    <type>nombre</type>
    <valeur>1.09em</valeur>
  </variable>
  <variable>
    <nom>TitreFontFamily</nom>
    <type>fontFamily</type>
    <valeur>sans-serif</valeur>
  </variable>
  <variable>
    <nom>TitreFont</nom>
    <type>text</type>
  </variable>
  
  <variable>
    <nom>TextFontSize</nom>
    <type>nombre</type>
    <valeur>0.88em</valeur>
  </variable>
  <variable>
    <nom>TextFontFamily</nom>
    <type>fontFamily</type>
    <valeur>sans-serif</valeur>
  </variable>
  <variable>
    <nom>TextFont</nom>
    <type>text</type>
  </variable>

</composant>