<composant>
  <!-- Nom du composant -->
  <nom>Edito</nom>
  <!-- Auteur du composant -->
  <auteur>Daniel FAIVRE &copy; 2008-2010 - licence GPL</auteur>
  <version>0.6</version>
  <necessite id='acs' version='[0.6;]' />

  <param>
    <nom>preview</nom>
    <valeur>200</valeur>
  </param>

  <variable>
    <nom>Fond</nom>
    <type>color</type>
  </variable>
  <variable>
    <nom>FondImage</nom>
    <type>img</type>
    <chemin>img/edito</chemin>
    <label>non</label>
  </variable>
  <variable>
    <nom>Bord</nom>
    <type>bord</type>
  </variable>
  <variable>
    <nom>LegendBord</nom>
    <type>bord</type>
  </variable>
  <variable>
    <nom>Legend</nom>
    <type>choix</type>
    <option>oui</option>
    <option>non</option>
    <valeur>oui</valeur>
  </variable>
  <variable>
    <nom>AlignInfosArticle</nom>
    <type>choix</type>
    <option>left</option>
    <option>right</option>
    <valeur>right</valeur>
  </variable>  
  <variable>
    <nom>NbLettres</nom>
    <type>nombre</type>
    <valeur>300</valeur>
  </variable>
</composant>