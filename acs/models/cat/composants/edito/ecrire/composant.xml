<composant>
  <!-- Nom du composant -->
  <nom>Edito</nom>
  <!-- Auteur du composant -->
  <auteur>Daniel FAIVRE &copy; 2008-2010 - licence GPL</auteur>
  <version>0.7.2</version>
  <necessite id='acs' version='[0.7.1;]' />

  <param>
    <nom>preview</nom>
    <valeur>200</valeur>
  </param>

  <variable>
    <nom>Fond</nom>
    <type>color</type>
  </variable>
  <variable>
    <nom>FondImage</nom>
    <type>img</type>
    <chemin>edito</chemin>
    <label>non</label>
  </variable>
  <variable>
    <nom>FondImageRepeatX</nom>
    <type>choix</type>
    <option>oui</option>
    <option>non</option>
    <valeur>oui</valeur>
  </variable>
  <variable>
    <nom>FondImageRepeatY</nom>
    <type>choix</type>
    <option>oui</option>
    <option>non</option>
    <valeur>non</valeur>
  </variable>
  <variable>
    <nom>FondAlign</nom>
    <type>choix</type>
    <option>left</option>
    <option>right</option>
    <valeur>left</valeur>
  </variable>
  <variable>
    <nom>FondVerticalAlign</nom>
    <type>choix</type>
    <option>top</option>
    <option>bottom</option>
    <valeur>top</valeur>
  </variable>

  <variable>
    <nom>Bord</nom>
    <type>bord</type>
  </variable>
  <variable>
    <nom>LegendBord</nom>
    <type>bord</type>
  </variable>
  <variable>
    <nom>Legend</nom>
    <type>choix</type>
    <option>oui</option>
    <option>non</option>
    <valeur>oui</valeur>
  </variable>
  <variable>
    <nom>AlignInfosArticle</nom>
    <type>choix</type>
    <option>left</option>
    <option>right</option>
    <valeur>right</valeur>
  </variable>  
  <variable>
    <nom>NbLettres</nom>
    <type>nombre</type>
    <valeur>300</valeur>
  </variable>

  <variable>
    <nom>Shadow</nom>
    <type>color</type>
  </variable>
  <variable>
    <nom>ShadowSize</nom>
    <type>nombre</type>
    <valeur>5</valeur>
  </variable>
  <variable>
  	<nom>ShadowBlur</nom>
    <type>nombre</type>
    <valeur>5</valeur>
  </variable>
</composant>