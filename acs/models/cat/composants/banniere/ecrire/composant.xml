<composant>
  <!-- Nom du composant -->
  <nom>Banniere</nom>

  <!-- Auteur du composant -->
  <auteur>Daniel FAIVRE &copy; 2008-2010 - licence GPL</auteur>
  <version>0.7.1</version>
  <necessite id='acs' version='[0.7.1;]' />

  <param>
    <nom>preview</nom>
    <valeur>160</valeur>
  </param>

  <variable>
    <nom>Fond</nom>
    <type>color</type>
  </variable>
  <variable>
    <nom>FondImage</nom>
    <type>img</type>
    <chemin>trame</chemin>
    <label>non</label>
  </variable>
  <variable>
    <nom>FondImageRepeatX</nom>
    <type>choix</type>
    <option>oui</option>
    <option>non</option>
    <valeur>oui</valeur>
  </variable>
  <variable>
    <nom>FondImageRepeatY</nom>
    <type>choix</type>
    <option>oui</option>
    <option>non</option>
    <valeur>non</valeur>
  </variable>
  <variable>
    <nom>FondAlign</nom>
    <type>choix</type>
    <option>left</option>
    <option>right</option>
    <valeur>left</valeur>
  </variable>
  <variable>
    <nom>FondVerticalAlign</nom>
    <type>choix</type>
    <option>top</option>
    <option>bottom</option>
    <valeur>top</valeur>
  </variable>
  
  <variable>
    <nom>Image</nom>
    <type>img</type>
    <chemin>banniere</chemin>
  </variable>
  <variable>
    <nom>Align</nom>
    <type>choix</type>
    <option>left</option>
    <option>center</option>
    <option>right</option>
    <valeur>center</valeur>
  </variable>
  <variable>
    <nom>Valign</nom>
    <type>choix</type>
    <option>top</option>
    <option>middle</option>
    <option>bottom</option>
    <valeur>center</valeur>
  </variable>
  <variable>
    <nom>Hauteur</nom>
    <type>nombre</type>
    <valeur>60px</valeur>
  </variable>
  <variable>
    <nom>Logo</nom>
    <type>choix</type>
    <option>oui</option>
    <option>non</option>
    <valeur>non</valeur>
  </variable>
  <variable>
    <nom>LogoAlign</nom>
    <type>choix</type>
    <option>left</option>
    <option>right</option>
    <valeur>left</valeur>
  </variable>
  <variable>
    <nom>TextColor</nom>
    <type>color</type>
  </variable>

  <variable>
    <nom>FontFamily</nom>
    <type>fontFamily</type>
		<valeur>sans-serif</valeur>
  </variable>
  <variable>
    <nom>Font</nom>
    <type>text</type>
  </variable>
  
  <variable>
  	<nom>ExtraLink</nom>
  	<type>text</type>
  </variable>
  <variable>
  	<nom>ExtraLabel</nom>
  	<type>text</type>
  </variable>
  <variable>
  	<nom>ExtraImg</nom>
  	<type>img</type>
		<chemin>banniere/extra</chemin>
  </variable>
  <variable>
  	<nom>ExtraTop</nom>
  	<type>text</type>
  </variable>
</composant>