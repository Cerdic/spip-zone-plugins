<composant>
  <!-- Nom du composant -->
  <nom>Audio</nom>
  <!-- Auteur du composant -->
  <auteur>Daniel FAIVRE &copy; 2008-2015 - licence GPL</auteur>
  <version>1.0.0</version>
	<necessite id='acs' version='[0.7.1;]' />
  <group>media</group>

  <param>
    <nom>preview</nom>
    <valeur>200</valeur>
  </param>

  <variable>
    <nom>lmin</nom>
    <type>text</type>
    <valeur>120px</valeur>
  </variable>
  <variable>
    <nom>lmax</nom>
    <type>text</type>
    <valeur>350px</valeur>
  </variable>

  <variable>
    <nom>Btn</nom>
    <type>color</type>
    <valeur>=acsFondColor</valeur>
  </variable>
  <variable>
    <nom>BtnOn</nom>
    <type>color</type>
    <valeur>=acsRubnavBordColor</valeur>
  </variable>

  <variable>
    <nom>TrackStatus</nom>
    <type>color</type>
    <valeur>#00afdf</valeur>
  </variable>

  <variable>
    <nom>LoadBar</nom>
    <type>color</type>
    <valeur>#8adf8a</valeur>
  </variable>
  <variable>
    <nom>ProgressBar</nom>
    <type>color</type>
    <valeur>#8d8fff</valeur>
  </variable>
  <variable>
    <nom>ProgressBarBord</nom>
    <type>color</type>
    <valeur>=acsRubnavBord</valeur>
  </variable>
  
  <variable>
    <nom>Fond</nom>
    <type>color</type>
  </variable>
  <variable>
    <nom>TitreFond</nom>
    <type>color</type>
  </variable>
  <variable>
    <nom>TitreImage</nom>
    <type>img</type>
    <chemin>trame</chemin>
    <label>non</label>
  </variable>
  <variable>
    <nom>Bord</nom>
    <type>bord</type>
  </variable>
  <variable>
    <nom>Sep</nom>
    <type>color</type>
  </variable>

  <variable>
    <nom>NbMp3</nom>
    <type>text</type>
    <valeur>10</valeur>
  </variable>
  <variable>
    <nom>ArticleColor</nom>
    <type>color</type>
    <valeur>#6faf8f</valeur>
  </variable>
  <variable>
    <nom>ArticleColorHover</nom>
    <type>color</type>
    <valeur>#afffaf</valeur>
  </variable>
  <variable>
    <nom>PodcastColor</nom>
    <type>color</type>
    <valeur>#bf9fdf</valeur>
  </variable>
  <variable>
    <nom>PodcastColorHover</nom>
    <type>color</type>
    <valeur>#efcfff</valeur>
  </variable>

  <variable>
    <nom>Mp3on</nom>
    <type>color</type>
    <valeur>#4422aa</valeur>
  </variable>
  <variable>
    <nom>Mp3hover</nom>
    <type>color</type>
    <valeur>#000099</valeur>
  </variable>

  <variable>
    <nom>Download</nom>
    <type>choix</type>
    <option>oui</option>
    <option>non</option>
    <valeur>oui</valeur>
  </variable>
  
  <variable>
    <nom>Shadow</nom>
    <type>color</type>
  </variable>
  <variable>
    <nom>ShadowSize</nom>
    <type>text</type>
  </variable>
  <variable>
  	<nom>ShadowBlur</nom>
    <type>text</type>
  </variable>
</composant>