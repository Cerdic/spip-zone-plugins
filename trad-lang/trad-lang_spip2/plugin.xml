<plugin>
	<nom>Trad-Lang</nom>
	<version>1.0</version>
	<version_base>0.3</version_base>
	<prefix>tradlang</prefix>
	<etat>dev</etat>
	<description>Un plugin pour g&#233;rer directement les fichiers langues depuis l'interface priv&#233;e.</description>
	<lien></lien> <!-- URI de documentation -->
	<icon>images/spip_lang.png</icon>
	<options>tradlang_options.php</options>
	<fonctions>tradlang_fonctions.php</fonctions>
	<install>base/tradlang_install.php</install>
	<pipeline>
		<nom>declarer_tables_interfaces</nom>
		<inclure>base/tradlang.php</inclure>
	</pipeline>
	<pipeline>
		<nom>declarer_tables_objets_sql</nom>
		<inclure>base/tradlang.php</inclure>
	</pipeline>
	<pipeline>
		<nom>declarer_tables_objets_surnoms</nom>
        <inclure>tradlang_pipelines.php</inclure>
	</pipeline>
	<pipeline>
		<nom>declarer_tables_objets_surnoms</nom>
        <inclure>tradlang_pipelines.php</inclure>
	</pipeline>
	<pipeline>
		<nom>revisions_liste_objets</nom>
		<inclure>tradlang_pipelines.php</inclure>
	</pipeline>
	<pipeline>
		<nom>autoriser</nom>
		<inclure>tradlang_autoriser.php</inclure>
	</pipeline>
	<bouton id='configurer_tradlang' parent='bando_configuration'>
		<titre>tradlang:titre_tradlang</titre>
	</bouton>
	<necessite id="SPIP" version="[2.3.0-dev;)" />
	<necessite id="revisions" version="[1.4.1;]" />
	<necessite id="saisies" version="[1.9.1;]" />
</plugin>
