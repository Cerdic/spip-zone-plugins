<plugin>
	<!-- Nom du plugin -->
	<nom>smush images</nom>

	<!-- Auteur du plugin -->
	<auteur>kent1</auteur>
	<version>0.1a</version>
	<etat>dev</etat>
	<description>
		Ce plugin permet d'utiliser l'api du site [smush.it->http://www.smush.it] pour optimiser le traitement des images.
	</description>

	<!-- precise le prefixe utilise pour toutes les fonctions du plugin, en general le nom du plugin -->
	<prefix>smush</prefix>

	<fonctions>smush_fonctions.php</fonctions>

	<pipeline>
		<!-- voir la page sur doc.spip.org, pour connaitre l'ensemble des pipeline -->
		<nom>post_image_filtrer</nom>
		<!-- nom de la fonction a appelé sans son prefixe -->
		<action>post_image_filtrer</action>
		<!-- chemin du fichier contenant la fonction -->
		<inclure>smush_pipelines.php</inclure>
	</pipeline>
	
	<!-- précise les dependances vis-a-vis de d'autres plugins -->
	<necessite id="SPIP" version="[2.1.0 dev;]" />
</plugin>
