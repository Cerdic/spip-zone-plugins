<plugin>
	<nom>Dépublication des articles</nom>
	<auteur>Matthieu Marcillaud</auteur>
	<licence>GNU/GPL</licence>
	<version>1.0.0</version>
	<version_base>1.0.0</version_base>
	<install>base/depublication.php</install>
	<fonctions>depublication_fonctions.php</fonctions>

	<etat>test</etat>
	
	<description>
		Ce plugin permet de définir une date de dépublication
		pour les articles de SPIP (ainsi que le nouveau statut désiré
		au moment de la dépublication)
	</description>
	
	<prefix>depublication</prefix>

	<!-- Taches périodiques pour modifier les statuts des articles a depublier -->
	<pipeline>
		<nom>taches_generales_cron</nom>
		<inclure>depublication_pipelines.php</inclure>
	</pipeline>
	
	<!-- Déclaration des champs supplémentaires de spip_articles -->
	<pipeline>
		<nom>declarer_tables_principales</nom>
		<inclure>base/depublication.php</inclure>
	</pipeline>
	
	<!-- Ajout du formulaire de depublication -->
	<pipeline>
		<nom>affiche_milieu</nom>
		<inclure>depublication_pipelines.php</inclure>
	</pipeline>	
	
	
	<necessite id="SPIP" version="[2.1.0;]" />
	<!-- #SAISIE -->
	<necessite id="saisies" version="[1.7.6;]" />
	<!-- (FOR) -->
	<necessite id="spip_bonux" version="[1.8.6;]" />
</plugin>
