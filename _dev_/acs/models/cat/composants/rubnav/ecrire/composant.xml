  <nom>Fond</nom>
  <!-- Auteur du composant -->
  <auteur>Daniel FAIVRE &copy; 2008 - licence GPL</auteur>
  <version>0.2</version>
  <version_spip_min>1.9207</version_spip_min>
  <version_spip_max>1.9208</version_spip_max>

  <param>
    <nom>preview</nom>
    <valeur>180</valeur>
  </param>

  <variable>
    <nom>FondColor</nom>
    <type>color</type>
  </variable>
  <variable>
    <nom>FondColor2</nom>
    <type>color</type>
  </variable>
  <variable>
    <nom>FondColor3</nom>
    <type>color</type>
  </variable>
  <variable>
    <nom>FondColorHover</nom>
    <type>color</type>
    <valeur>ffdf00</valeur>
  </variable>
  <variable>
    <nom>TitreFondColor</nom>
    <type>color</type>
  </variable>
  <variable>
    <nom>TitreFondImage</nom>
    <type>img</type>
    <chemin>img/trame</chemin>
    <label>non</label>
  </variable>
  <variable>
    <nom>BordColor</nom>
    <type>color</type>
    <valeur>acsFondBordColor</valeur>
  </variable>
  <variable>
    <nom>SepColor</nom>
    <type>color</type>
    <valeur>acsFondBordColor</valeur>
  </variable>
  <variable>
    <nom>Align</nom>
    <type>choix</type>
    <option>left</option>
    <option>center</option>
