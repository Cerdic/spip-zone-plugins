$(document).ready(function() {
	$('.cache').hide();
	$('.showhide').click( function() {
		if($(this).next('.cache').is(':hidden')){
			$(this).next('.cache').toggle('slow');
		}
		else {
			$(this).next('.cache').toggle('slow');
		}
	});
});
