<plugin>
	<nom>Change Statut</nom>
	<slogan>Modifier, le temps d'un test, son statut de webmestre</slogan>
	<auteur>Yffic</auteur>
	<licence>GNU/GPL</licence>
	<version>0.3.0</version>
	<version_base>0.1</version_base>
	<etat>test</etat>
	<description>
		<multi>
			[fr]Changer temporairement et d'un clic son statut de webmestre en administrateur ou r&#233;dacteur. Puis revenir &#224; la situation originale.
		</multi>
	</description>
	<icon>prive/themes/spip/images/changestatut-32.png</icon>
	<prefix>changestatut</prefix>
	<lien>http://contrib.spip.net/Change-Statut</lien>
	<install>base/changestatut_install.php</install>
	<pipeline>
		<nom>header_prive</nom>
		<inclure>changestatut_prive_pipelines.php</inclure>
	</pipeline>
	<pipeline>
		 <nom>autoriser</nom>
		 <inclure>inc/changestatut_autoriser.php</inclure>
	</pipeline>
	<bouton id='versredacteur21' parent="outils_rapides">
		<icone>prive/themes/spip/images/changestatut_versredacteur-16.png</icone>
		<titre>changestatut:versredacteur</titre>
		<url>changestatut</url>
		<args>statut=redacteur</args>
	</bouton>
	<bouton id='versadmin21' parent="outils_rapides">
		<icone>prive/themes/spip/images/changestatut_versadmin-16.png</icone>
		<titre>changestatut:versadmin</titre>
		<url>changestatut</url>
		<args>statut=admin</args>
	</bouton>
	<bouton id='verswebmestre21' parent="outils_rapides">
		<icone>prive/themes/spip/images/changestatut_verswebmestre-16.png</icone>
		<titre>changestatut:verswebmestre</titre>
		<url>changestatut</url>
		<args>statut=webmestre</args>
	</bouton>
	<necessite id="SPIP" version="[2.1.0;3.0.99]" />
	<necessite id="bando" version="[1.1.;]" />
	<categorie>outil</categorie>
</plugin>