	</pipeline>
	<pipeline>
		<nom>editer_contenu_objet</nom>
		<inclure>polyhier_pipeline.php</inclure>
	</pipeline>
	<pipeline>
		<nom>pre_edition</nom>
		<inclure>polyhier_pipeline.php</inclure>
	</pipeline>
	<pipeline>
		<nom>post_edition</nom>
		<inclure>polyhier_pipeline.php</inclure>
	</pipeline>
