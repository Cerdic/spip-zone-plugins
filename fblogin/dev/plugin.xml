<plugin>
	<nom>
		<multi>
		 [fr]Identification Facebook
		 [en]Facebook identification
		</multi>
	</nom>
	<slogan>
		<multi>
		 [fr]Inscription et authentification avec Facebook Connect
		 [en]Facebook Connect sign-in and authentication
		</multi>
	</slogan>
	<auteur>[Les Développements Durables->http://www.ldd.fr]</auteur>
	<licence>GPL v3</licence>
	<version>0.3.1</version>
	<version_base>0.1</version_base>
	<etat>dev</etat>
	<icon>images/fb-login-64.png</icon>
	<description>
		<multi>
			[fr]Authentification des auteurs et visiteurs &#224; l'aide de leur compte Facebook.
			<br />{Utilisation&nbsp;:} Pour un utilisateur qui souhaite utiliser son compte Facebook pour acc&#233;der au site, il suffit de cliquer sur le bouton Facebook pour se logguer.
			[en]Authenticates users with their OpenID.
			<br />{Using this plugin:} A user wishing to authenticate with her Facebook Account should click on Facebook button to log in.
		 </multi>
	</description>
	<options>fblogin_options.php</options>
	<lien>https://contrib.spip.net</lien><!-- URI de documentation : à compléter -->
	<prefix>fblogin</prefix>
  	<install>base/fblogin.php</install>
	<pipeline>
	  	<nom>declarer_tables_principales</nom>
	  	<inclure>base/fblogin.php</inclure>
	</pipeline>
	<pipeline>
		<nom>recuperer_fond</nom>
		<inclure>fblogin_pipelines.php</inclure>
	</pipeline>
	<pipeline>
		<nom>formulaire_charger</nom>
		<inclure>fblogin_pipelines.php</inclure>
	</pipeline>
	<pipeline>
		<nom>formulaire_verifier</nom>
		<inclure>fblogin_pipelines.php</inclure>
	</pipeline>
	<pipeline>
		<nom>formulaire_traiter</nom>
		<inclure>fblogin_pipelines.php</inclure>
	</pipeline>
	<categorie>auteur</categorie>
	
	<necessite id="lib:facebook-php-sdk-9513f08" src="https://github.com/facebook/php-sdk/zipball/v3.1.1" />
	<necessite id="spip_bonux" version="[2.2.22;]" />
	<necessite id="SPIP" version="[2.1.0;2.1.99]" />
</plugin>