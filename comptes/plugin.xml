<plugin>

	<nom>Comptes &amp; Contacts</nom>

	<auteur>Cyril MARION - [Ateliers CYM->http://www.cym.fr]</auteur>

	<prefix>comptes</prefix>
	
	<version>1.0.2</version>

	<version_base>1.0.2</version_base>

	<etat>dev</etat>

	<description>
		<multi>
			[fr]&Eacute;tend les auteurs SPIP; ajoute des champs uniques (pr&eacute;nom, date de naissance;...) et multiples (adresses m&egrave;l, num&eacute;ros de t&eacute;l&eacute;phone, adresses postales...); permet la gestion de groupes de contacts.
			[en]Extends the SPIP authors table; inserts unique fields (firstname, date of birth...) and multipple fields (mail address, postal address...); allows the management of groups of contacts.
		</multi>
	</description>

	<icon>img/picto_comptes_128x128.png</icon>

	<pipeline>
		<nom>insert_head</nom>
		<action>insert_head</action>
		<inclure>comptes_fonctions.php</inclure>
	</pipeline>

	<pipeline>
		<nom>declarer_tables_principales</nom>
		<inclure>base/comptes_tables.php</inclure>
	</pipeline>
	
	<pipeline>
		<nom>declarer_tables_interfaces</nom>
		<inclure>base/comptes_tables.php</inclure>
	</pipeline>
	
	<pipeline>
		<nom>declarer_tables_auxiliaires</nom>
		<inclure>base/comptes_tables.php</inclure>
	</pipeline>
	
	<install>base/comptes_upgrade.php</install>
	
	<fonctions>comptes_fonctions.php</fonctions>
	
	<options>comptes_options.php</options>
	
	<bouton id='comptes' parent='naviguer'>
		<icone>img/picto_comptes_32x32.png</icone>
		<titre>comptes:comptes</titre>
	</bouton>

	<pipeline>
		<nom>autoriser</nom>
		<inclure>comptes_autorisations.php</inclure>
	</pipeline>
	    
	<necessite id="SPIP" version="[2.0.9;]" />
	<necessite id="spip_bonux" version="[1.8.8;]" />
	<necessite id="verifier" version="[0.1;]" />
	<necessite id="pays" version="[1.0;]" />
	
	<categorie>auteur</categorie>
</plugin>
