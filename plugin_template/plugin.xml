<plugin>
	<nom> <!-- Nom du plugin -->
	Template : un template de plugin vide pour servir de guide
	</nom>
	<auteur>	<!-- Auteur du plugin -->
 	collectif 
_ &#169; 2006 - Distribu&eacute; sous licence GPL
	</auteur>
	<version> <!-- Version du plugin -->
	0.1
	</version>
	<etat> <!-- Etat du plugin, au choix : dev (developpement), test, stable, experimental -->
	experimental
	</etat>
	<description>
	Ici decrivez plus ou moins longuement ce que fait votre plugin
	</description>
	<lien>http://www.spip.net/fr_article3448.html</lien> <!-- URI de documentation -->
	<options> <!-- fichier options (comme l'ancien mes_options.php) charge a chaque hit !! ne surtout pas l'appeler mes_options -->
	template_options.php
	</options>
	<fonctions> <!-- fichier fonctions charge a chaque recalcul (comme l'ancien mes_fonctions.php) !! ne surtout pas l'appeler mes_fonctions -->
	template_fonctions.php
	</fonctions>
	<!-- prefixe des fonctions, filtres et fichers de votre plugin : 
		toutes vos fonctions doivent commencer par ce prefixe suivi de _ (ici : template_ma_fonction() par exemple)
		C'est par ailleurs conseille pour les noms de fichier
		Deux plugin ne peuvent pas avoir le meme prefixe, donc ne gardez pas celui la ! :)
		-->
	<prefix> 
	template
	</prefix>
	
	<!-- Boutons, SPIP >= 1.9.3 [9984] (spip_version_code >= 1.9261)
	     Avant cette version de spip, utiliser les pipelines
	     ajouter_boutons ou ajouter_onglets
	     -->
	<!-- Ajoute un bouton dans le menu principal -->
	<bouton id='mon_bouton_1' parent=''>
		<icone>images/bouton-24.png</icone>
		<titre>Template</titre>
		<url>template</url> <!-- nom de l'exec, facultatif, par defaut prend l'id -->
		<args>type=texte&amp;id=1</args>
	</bouton> 
	<!-- Ajoute un bouton dans un sous-menu -->
	<bouton id='mon_sous_bouton' parent='mon_bouton_1'>
		<icone>images/bouton-24.png</icone>
		<titre>Sous le template</titre>
		<url>template</url> 
		<args>type=autre_chose&amp;id=1</args>
	</bouton> 	
	<!-- Ajoute un onglet -->
	<onglet id='mon_onglet' parent='configuration'>
		<icone>images/onglet-24.png</icone>
		<titre>Un onglet</titre>
		<url>template</url>
		<args>type=autre_chose&amp;id=1</args>
	</onglet> 		
	
	<!-- Definitions des fonctions qui s'inserent dans les pipelines -->
	<!-- Le parametre action est facultatif : en son absence la fonction appelee sera le prefixe suivi du nom du pipeline
	ex : template_affichage_final()
	Le parametre inclure est egalement facultatif, si la fonction est deja chargee en memoire (car presente dans le fichier options par exemple)	-->
	<pipeline>
		<!-- pipeline qui permet de modifier les pages publiques html issues du cache ou du calcul avant leur envoi au navigateur 
		il permet de modifier n'importe quoi, mais est execute a chaque fois et ne profite pas du cache
		il est donc a reserver pour des plugins qui ne sont pas utilises en production de preference
		-->
		<nom>affichage_final</nom> 
		<action>affichage_final</action>
		<inclure>template_pipelines_public.php</inclure>
	</pipeline>	
	<pipeline>
		<nom>affiche_droite</nom> 
		<action>affiche_droite</action>
		<inclure>template_pipelines_admin.php</inclure>
	</pipeline>
