		<action>header_prive</action>
		<inclure>tweak_spip_pipelines_admin.php</inclure>
	</pipeline>
	<pipeline>
		<nom>nettoyer_raccourcis_typo</nom>
		<action>nettoyer_raccourcis_typo</action>
		<inclure>tweak_spip_pipelines_typo.php</inclure>
	</pipeline>
	<pipeline>
		<nom>pre_propre</nom>
		<action>pre_propre</action>
		<inclure>tweak_spip_pipelines_typo.php</inclure>
	</pipeline>
	<pipeline>
		<nom>pre_typo</nom>
		<action>pre_typo</action>
		<inclure>tweak_spip_pipelines_typo.php</inclure>
	</pipeline>
	<pipeline>
		<nom>post_propre</nom>
		<action>post_propre</action>
		<inclure>tweak_spip_pipelines_typo.php</inclure>
	</pipeline>
	<pipeline>
		<nom>post_typo</nom>
		<action>post_typo</action>
		<inclure>tweak_spip_pipelines_typo.php</inclure>
	</pipeline>
