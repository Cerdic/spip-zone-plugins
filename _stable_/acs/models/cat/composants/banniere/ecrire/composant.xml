<composant>
  <!-- Nom du composant -->
  <nom>Banniere</nom>

  <!-- Auteur du composant -->
  <auteur>Daniel FAIVRE &copy; 2008-2009 - licence GPL</auteur>
  <version>0.5</version>
  <necessite id='acs' version='[0.5;]' />

  <param>
    <nom>preview</nom>
    <valeur>80</valeur>
  </param>

  <variable>
    <nom>ImageFond</nom>
    <type>img</type>
    <chemin>img/fond</chemin>
  </variable>
  <variable>
    <nom>Image</nom>
    <type>img</type>
    <chemin>img/banniere</chemin>
  </variable>
  <variable>
    <nom>Align</nom>
    <type>choix</type>
    <option>left</option>
    <option>center</option>
    <option>right</option>
    <valeur>left</valeur>
  </variable>
  <variable>
    <nom>Hauteur</nom>
    <type>nombre</type>
    <valeur>60px</valeur>
  </variable>
  <variable>
    <nom>Logo</nom>
    <type>choix</type>
    <option>oui</option>
    <option>non</option>
    <valeur>non</valeur>
  </variable>
  <variable>
    <nom>LogoAlign</nom>
    <type>choix</type>
    <option>left</option>
    <option>right</option>
    <valeur>left</valeur>
  </variable>
  <variable>
    <nom>TextColor</nom>
    <type>color</type>
  </variable>
  <variable>
    <nom>FontFamily</nom>
    <type>fontFamily</type>
		<valeur>sans-serif</valeur>
  </variable>
  <variable>
    <nom>Font</nom>
    <type>text</type>
  </variable></composant>