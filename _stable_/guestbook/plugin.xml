<plugin>
	<nom>GuestBook</nom>
	<auteur>Yohann Prigent - Decembre 2008 repris des travaux de Bernard Blazin</auteur>
	<version>1.1</version>
	<version_base>1.0</version_base>
	<etat>stable</etat>
	<description>Un Livre d'or pour votre site Spip. Ce livre d'or fonctionne avec une table &#13;
		diff&eacute;rente des tables de SPIP, ce qui en fais un syst&egrave;me &agrave; part.</description>
	<lien>[Documentation->http://www.spip-contrib.net/Plugin-Guestbook]</lien>
	<prefix>guestbook</prefix>
	<install>base/guestbook.php</install>
	<pipeline>
		<nom>declarer_tables_principales</nom>
		<inclure>base/guestbook_install.php</inclure>
	</pipeline>
	<pipeline>
		<nom>declarer_tables_auxiliaires</nom>
		<inclure>base/guestbook_install.php</inclure>
	</pipeline>
	<pipeline>
		<nom>declarer_tables_interfaces</nom>
		<inclure>base/guestbook_install.php</inclure>
	</pipeline>
	<necessite id="SPIP" version='[2.0.0;]' />
	<bouton id='livredor' parent='forum'>
		<icone>img_pack/livredor.png</icone>
		<titre>Livre d'or</titre>
		<url>livre</url>
	</bouton>
</plugin>