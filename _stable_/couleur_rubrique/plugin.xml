<plugin>
	<nom> <!-- Nom du plugin -->
	Couleur de rubrique
	</nom>
	<icon>img_pack/icon.png</icon>
	<auteur>	<!-- Auteur du plugin -->
	[ARNO*->arno@rezo.net], sur la base du travail d'[erational->http://www.erational.org]
_ &#169; Distribu&#233; sous licence GNU/GPL
_ Le module de choix de couleur par [Steven Wittens->http://acko.net/dev/farbtastic] sous licence GPL
	</auteur>
	<version>
	1.0
	</version>
	<etat>
	stable
	</etat>
	<description>
		<p>Ce plugin permet de choisir une couleur pour chaque rubrique du site.</p>
		<p>Pour afficher la couleur d'une rubrique dans un squelette, il suffit d'utiliser le code: <code>[#(#ID_RUBRIQUE|pb_couleur_rubrique)]</code>.</p>
	</description>
	<!-- classe d'implementation : espace de nommage qui prefixera les appels de fonction
	sur le mode Rien::
	ainsi les fonctions hors espace de nommage ne peuvent etre appelees
	ce parametre est obligatoire et doit etre non vide
	-->
	<fonctions>
	pb_couleur_rubrique_fonctions.php
	</fonctions>
	<prefix> 
	pb_couleur_rubrique
	</prefix>
	<!-- Definitions des fonctions qui s'inserent dans les pipelines -->

	<pipeline>
		<nom>header_prive</nom>
		<action>header</action>
		<inclure>pb_couleur_rubrique.php</inclure>
	</pipeline>
	<pipeline>
		<nom>affiche_gauche</nom>
		<action>gauche</action>
		<inclure>pb_couleur_rubrique.php</inclure>
	</pipeline>
	<!-- Le parametre action est facultatif : en son absence la methode de la classe portant le nom du pipeline est appelee. Le parametre inclure est facultatif.	-->

	<necessite id="SPIP" version="[1.9.2;]" />
</plugin>
