<plugin>
	<nom> <!-- Nom du plugin -->
	<multi>
	[fr]Indexation
	[it]Indicizzazione
	</multi>
	</nom>
	<auteur></auteur>
	<version>
	0.4
	</version>
	<etat>
	dev
	</etat>
	<description>
	Indexation du contenu pour acc&#233;l&#233;rer le moteur de recherche
	<ul>
	<li>exploite le mode FULLTEXT SEARCH IN BOOLEAN MODE de MySQL, cf. [->http://dev.mysql.com/doc/refman/5.0/fr/fulltext-boolean.html]</li>
	<li>Avec ses {extracteurs}, ce plugin permet d'indexer les fichiers PDF etc.</li>
	</ul>
	</description>
	<lien>http://www.spip-contrib.net/Le-plugin-Indexation</lien> <!-- URI de documentation -->
	<options> <!-- fichier charge a chaque hit -->
		indexation_options.php
	</options>
	<fonctions> <!-- fichier charge a chaque recalcul de page -->
		indexation_fonctions.php
	</fonctions>
	<prefix>
	Indexation
	</prefix>
	<pipeline>
		<nom>taches_generales_cron</nom>
	</pipeline>

	<pipeline>
		<nom>post_edition</nom>
		<inclure>inc/indexation.php</inclure>
	</pipeline>


	<version_base>0.4</version_base>
	<install>base/indexation_upgrade.php</install>

	<chemin dir='' />
</plugin>
