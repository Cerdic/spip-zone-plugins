<paquet
	prefix="gmap"
	categorie="divers"
	version="1.0.0"
	schema="1.0.1"
	etat="stable"
	compatibilite="[3.0.0;3.0.*]"
	logo="images/logo-gmap.png"
	documentation="http://contrib.spip.net/Plugin-GMap-geolocalisation-et-cartographie"
>

	<nom>G&#233;olocalisation et cartographie</nom>
	<auteur>F. ALBERT</auteur>
	<copyright>2011</copyright>
	<licence>GPL v3</licence>
	
    <!-- Installation de la base de données -->
	<pipeline nom="declarer_tables_objets_sql" inclure="base/gmap_tables.php" />
	<pipeline nom="declarer_tables_interfaces" inclure="base/gmap_tables.php" />
	<pipeline nom="declarer_tables_principales" inclure="base/gmap_tables.php" />
	<pipeline nom="declarer_tables_auxiliaires" inclure="base/gmap_tables.php" />

	<!-- Autorisations, pour le boutons -->
	<pipeline nom="autoriser" inclure="gmap_autoriser.php" />

	<!-- Saisie dans la zone privée -->
	<pipeline nom="header_prive" action="insert_head_prive" inclure="gmap_pipeline.php" />
	<pipeline nom="affiche_milieu" action="saisie_geo_info" inclure="gmap_pipeline.php" />
	<!-- <pipeline nom="afficher_contenu_objet" inclure="gmap_pipeline.php" /> -->
	<pipeline nom="information_exif" action="get_position" inclure="gmap_pipeline.php" />

	<!-- Affichage dans la zone publique -->
	<pipeline nom="insert_head" inclure="gmap_pipeline.php" />
	<!-- <pipeline nom="affichage_final" inclure="gmap_pipeline.php" /> -->
	
	<!-- Pipelines internes GMap -->
	<pipeline nom="gmap_implementations" action="declare_implementation" inclure="gmap_pipeline_local.php" />
	<pipeline nom="gmap_outils_geoloc" action="declare_outil_geoloc" inclure="gmap_pipeline_local.php" />
	
	<!-- Definition des pages de configuration -->
	<menu nom="configurer_gmap" titre="gmap:config_titre_texte" parent="menu_configuration" icone="images/configurer-gmap-16.png" />
	<onglet nom="configurer_gmap" titre="gmap:onglet_config_principale" parent="configurer_gmap" icone="images/logo-config-gmap-main.png" action="configurer_gmap" />
	<onglet nom="configurer_gmap_prive" titre="gmap:onglet_config_prive" parent="configurer_gmap" icone="images/logo-config-gmap-prive.png" action="configurer_gmap_prive" />
	<onglet nom="configurer_gmap_ui" titre="gmap:onglet_config_interface" parent="configurer_gmap" icone="images/logo-config-gmap-ui.png" action="configurer_gmap_ui" />
	<onglet nom="configurer_gmap_import" titre="gmap:onglet_config_imports" parent="configurer_gmap" icone="images/logo-config-gmap-import.png" action="configurer_gmap_import" />
	<onglet nom="configurer_gmap_html" titre="gmap:onglet_config_help" parent="configurer_gmap" icone="images/logo-config-gmap-help.png" action="configurer_gmap_html" />
	
	<!-- Menu edition -->
	<menu nom="geopoints" titre="gmap:geopoints" parent="menu_edition" icone="images/geopoint-16.png" />

	<chemin path="" />
	<chemin path="./public" />
	<chemin path="./prive" type="prive" />
	
</paquet>