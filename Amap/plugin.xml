	</pipeline>
	<pipeline>
		<nom>declarer_tables_interfaces</nom>
		<inclure>base/amap_tables.php</inclure>
	</pipeline>
	<pipeline>
		<nom>config_motsclefs</nom>
		<inclure>base/amap_tables.php</inclure>
	</pipeline>
	<pipeline>
		<nom>config_site</nom>
		<inclure>base/amap_tables.php</inclure>
	</pipeline>
        <pipeline>
