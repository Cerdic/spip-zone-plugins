<plugin>
	<nom><multi>[fr]Coordonnées[en]Addresses &amp; phone numbers</multi></nom>
	<description>
	<multi>[fr]Ajoute la possibilité de donner des coordonnées postales (adresses, mails, téléphones)
	aux objets de SPIP, tout particulièrement aux auteurs. Plusieurs adresses et numéros de téléphone peuvent ainsi être donnés à chaque auteur.
	[fr]Provides the ability to add postal details (addresses, e-mail, phone numbers) to SPIP objects, specifically to authors. Several addresses or phone numbers can be given to each single author.
	</multi>
	</description>
	<lien>http://www.spip-contrib.net/Plugin-Coordonnees</lien>
	<icon>images/addressbook-128.png</icon>
	
	<version>1.1.0</version>
	<etat>test</etat>
	
	<auteur>Matthieu Marcillaud</auteur>
	<licence>GNU/GPL</licence>
	
	<prefix>cop</prefix>
	<fonctions>cop_fonctions.php</fonctions>

	<install>base/cop_upgrade.php</install>
	<version_base>1.0.0</version_base>

	<!-- Declaration des tables -->
	<pipeline>
		<nom>declarer_tables_principales</nom>
		<inclure>base/cop.php</inclure>
	</pipeline>
	<pipeline>
		<nom>declarer_tables_interfaces</nom>
		<inclure>base/cop.php</inclure>
	</pipeline>
	<pipeline>
		<nom>declarer_tables_auxiliaires</nom>
		<inclure>base/cop.php</inclure>
	</pipeline>

	<!-- Autorisations -->
	<pipeline>
		<nom>autoriser</nom>
		<inclure>cop_autorisations.php</inclure>
	</pipeline>

	<!-- Éléments d'interface -->
	<pipeline>
		<nom>affiche_milieu</nom>
		<inclure>cop_pipelines.php</inclure>
	</pipeline>

	<!-- avec plugin champs extras 2 -->
	<pipeline>
		<nom>objets_extensibles</nom>
		<inclure>cop_pipelines.php</inclure>
	</pipeline>
		
	<necessite id="SPIP" version="[2.1;]" />	
	<necessite id="saisies" version="[1.5.0;]" />

	<necessite id="pays" version="[1.0.0;]" />
	
	<categorie>auteur</categorie>
	
</plugin>
