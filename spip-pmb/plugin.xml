<?xml version="1.0" encoding="ISO-8859-1"?>
<plugin>
	<nom> <!-- Nom du plugin -->
	Portail Web pour PMB
	</nom>
	<auteur>	<!-- Auteur du plugin -->
	Arnault PACHOT 
 	[OpenStudio->http://www.openstudio.fr]
_ &#169; 2010 - Licence GPL
	</auteur>
	<version>
	0.7 BETA
	</version>
	<etat>
	test
	</etat>
	<description>
	Ce plugin permet d'utiliser SPIP comme portail web du logiciel PMB. <br />
	[acc&egrave;s au panneau de configuration pour param&eacute;trer le plugin->.?exec=cfg&amp;cfg=spip_pmb] 
	</description>
	<lien>http://www.spip-contrib.net/Interface-PMB-pour-SPIP</lien> <!-- URI de documentation -->
	<options> <!-- fichier charge a chaque hit -->
	pmb_mes_options.php
	</options>
	
	<fonctions> <!-- fichier charge a chaque recalcul -->
	pmb_mes_fonctions.php</fonctions>
	<install>base/pmb_tables.php</install>
	
	<pipeline>
  		<nom>post_syndication</nom>
  		<action>traitement_flux</action>
  		<inclure>pmb_parsing.php</inclure>
 	</pipeline>
	<!-- classe d'implementation : espace de nommage qui prefixera les appels de fonction
	sur le mode Rien::
	ainsi les fonctions hors espace de nommage ne peuvent etre appelees
	ce parametre est obligatoire et doit etre non vide
	-->
	<prefix> 
	pmb
	</prefix>

 	<necessite id="CFG" version="[1.0;]" />
	<necessite id="spip_bonux" version="[1.2;]" />
	<necessite id='spip' version='[2.0.10;]' />
	<necessite id='Z' version='[1.2.0;]' />
</plugin>
