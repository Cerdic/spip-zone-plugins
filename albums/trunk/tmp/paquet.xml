<paquet
	prefix="Albums"
	categorie="multimedia"
	version="2.0.0"
	etat="dev"
	compatibilite="[3.0.0-beta;["
	logo="prive/themes/spip/images/albums-128.png"
	schema="0.0.1"
	documentation="http://www.spip-contrib.net/?article3971"
>	
	<nom>Albums</nom>
	<!-- Albums dans SPIP -->
	
	<auteur lien="http://romy.tetue.net">romy.tetue.net</auteur>
	<auteur lien="http://razack.wordpress.com">Charles R.</auteur>
	<credit lien="http://tiheum.deviantart.com/art/Faenza-Icons-173323228">Tiheum (icone tirée du thème "Faenza")</credit>
	<licence>GPL - 2011</licence>
		
	<pipeline nom="declarer_tables_objets_sql" inclure="base/albums.php" /> <!-- tables objets sql -->
	<pipeline nom="declarer_tables_auxiliaires" inclure="base/albums.php" /> <!-- tables auxiliaires -->
	<pipeline nom="declarer_tables_interfaces" inclure="base/albums.php" /> <!-- tables interfaces -->
	
	<pipeline nom="optimiser_base_disparus" inclure="albums_pipelines.php" /> <!-- suppression liens morts -->
	<pipeline nom="affiche_milieu" inclure="albums_pipelines.php" /> <!-- page 'contenu du site': configuration plugin -->
	<pipeline nom="afficher_complement_objet" inclure="albums_pipelines.php" /> <!-- objets: bloc albums -->
	<pipeline nom="autoriser" inclure="albums_autoriser.php" />
	<pipeline nom="header_prive" inclure="albums_pipelines.php" />
	<pipeline nom="insert_head_css" inclure="albums_pipelines.php" />
	<pipeline nom="post_insertion" inclure="albums_pipelines.php" /> <!-- edition des liens apres creation d'un album -->
	<pipeline nom="post_edition" inclure="albums_pipelines.php" /> <!-- mettre a jour liens albums apres edition d'un objet-->

	<necessite nom="saisies" compatibilite="[1.21.0;]" />
	<utilise nom="inserer_modeles" compatibilite="[1.0.0;]" />
	<utilise nom="mediabox" compatibilite="[0.5.0;[" />
	
	<menu nom="albums" titre="album:titre_albums" parent="menu_edition" icone="images/album-16.png" />
	<menu nom="album_creer" titre="album:icone_creer_album" parent="outils_rapides" icone="images/album-add-16.png" action="album_edit" parametres="new=oui" />
	
</paquet>
