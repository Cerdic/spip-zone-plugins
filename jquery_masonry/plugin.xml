<plugin>
	<nom>jQuery Masonry</nom>
	<slogan>Le plugin qui range vos blocs</slogan>
	<auteur>Yffic</auteur>
	<licence>GPL v3</licence>
	<version>0.4.2</version>
	<version_base>0.1</version_base>
	<etat>test</etat>
	<description>
		<multi>[fr]Une adaptation pour Spip du plugin [JQuery Masonry->http://masonry.desandro.com/]
		</multi>
	</description>
	<icon>prive/themes/spip/images/jquerymasonry-32.png</icon>
	<lien>http://www.spip-contrib.net/JQuery-Masonry</lien>
	<prefix>jquerymasonry</prefix>
	<install>base/jquerymasonry_install.php</install>
	<pipeline>
		<nom>insert_head</nom>
		<inclure>jquerymasonry_pipelines.php</inclure>
	</pipeline>
	<pipeline>
		 <nom>autoriser</nom>
		 <inclure>inc/jquerymasonry_autoriser.php</inclure>
	</pipeline>
	<pipeline>
		<nom>ieconfig_metas</nom>
		<inclure>jquerymasonry_ieconfig_metas.php</inclure>
	</pipeline>
	<bouton id='jquerymasonry' parent='configuration'>
		<icone>prive/themes/spip/images/jquerymasonry-24.png</icone>
		<titre>jquerymasonry:titre_menu</titre>
		<url>configurer_jquerymasonry</url>
	</bouton>
	<bouton id='jquerymasonry2' parent='bando_squelette'>
		<icone>prive/themes/spip/images/jquerymasonry-16.png</icone>
		<titre>jquerymasonry:titre_menu</titre>
		<url>configurer_jquerymasonry</url>
	</bouton>
	<necessite id="SPIP" version="[2.1.0;3.0.99]" />
	<necessite id="saisies" version="[1.9.0;]" />
	<necessite id="YAML" version="[1.5;]" /> <!-- pour Saisies -->
	<necessite id="spip_bonux" version="[1.8;]" />
	<categorie>multimedia</categorie>
</plugin>
