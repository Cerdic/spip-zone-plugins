<plugin>
	<nom> <!-- Nom du plugin -->
  	<multi>[fr]Convertisseur de formats
    [en]Format convertor</multi>
	</nom>
	<auteur>	<!-- Auteur du plugin -->
	[erational->http://www.erational.org], [Fil]
_ &#169; 2006-2008 - Licence GPL
	</auteur>
	<version>
	0.2
	</version>
	<etat>
	test
	</etat>
	<description>
    	<multi>[fr]Convertit les formats de type wiki, phpBB, quark xpress tags en format SPIP et vice versa ; integre au besoin les textes convertis dans des articles ; on peut uploader plusierus textes en un seul coup en les zippant au prealable
    	[en]Converts various formats (wiki, phpBB) into SPIP format</multi>
	</description>
	<lien></lien> <!-- URI de documentation -->
	<!-- classe d'implementation : espace de nommage qui prefixera les appels de fonction
	sur le mode Rien::
	ainsi les fonctions hors espace de nommage ne peuvent etre appelees
	ce parametre est obligatoire et doit etre non vide
	-->
	<prefix> 
	Convertisseur
	</prefix>
	<!-- Definitions des fonctions qui s'inserent dans les pipelines -->
	<pipeline>
        <nom>ajouter_boutons</nom>
        <action>ajouterBoutons</action>
        <inclure>inc_convertisseur.php</inclure>
  </pipeline>

	<!-- Le parametre action est facultatif : en son absence la methode de la classe portant le nom du pipeline est appelee. Le parametre inclure est facultatif.	-->

	<necessite id="SPIP" version="[1.9.0;]" />
	<categorie>edition</categorie>
</plugin>
