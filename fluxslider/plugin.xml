<plugin>
	<nom>Flux Slider</nom>
	<slogan>
		<multi>
		[fr]Slider JQuery Fluxslider dans SPIP!
		[en]JQuery Fluxslider for SPIP!
		</multi>
	</slogan>
	<auteur>[Gr&#233;gory Pascal->http://contrib.spip.net/ngombe]</auteur>
	<version>0.0.1</version>
	<licence>GNU/GPL</licence>
	<etat>test</etat>
