		<inclure>fluxslider_pipelines.php</inclure>
	</pipeline>
	<pipeline>
		<nom>insert_head</nom>
		<inclure>fluxslider_pipelines.php</inclure>
	</pipeline>
	<pipeline>
		<nom>header_prive</nom>
		<inclure>fluxslider_pipelines.php</inclure>
	</pipeline>
	<noisette>modeles/fluxslider.html</noisette>
	<categorie>multimedia</categorie>
	<necessite id="SPIP" version="[2.0.0;2.1.99]" />
	<necessite id='cfg' version='[1.0.4;]' />
</plugin>