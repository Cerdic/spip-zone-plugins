<plugin>
	<nom>Simples Logs</nom>
	<auteur>luc.tech@free.fr</auteur>
	<licence>GNU/GLP</licence>
	<version>0.2</version>
	<description>
	Visualisation des logs SPIP par les administrateurs.
  
  Une fois le plugin activ&#233;, la consultation des journaux se r&eacute;alise au travers de la page [?exec=simplog->?exec=simplog]
	</description>
	<etat>dev</etat>
	<icon>img_pack/asuivre-24.gif</icon>
	<prefix>simplog</prefix>
  <pipeline>
      <nom>autoriser</nom>
      <inclure>inc/simplog_autoriser.php</inclure>
  </pipeline>
  <bouton id="simplog_bt" parent="configuration">
		  <icone>img_pack/asuivre-24.gif</icone>
		  <titre>simplog:logs</titre>
		  <url>simplog</url>
      <args></args>
	</bouton>
  <bouton id="simplog_bt21" parent="bando_administration">
		  <icone>img_pack/asuivre-16.gif</icone>
		  <titre>simplog:logs</titre>
		  <url>simplog</url>
      <args></args>
	</bouton>
	<necessite id='spip' version='[2.1.0;]' />
	<necessite id='iterateurs'  />
  <utilise id="bando" version="[;]" /> 
</plugin>