	<icon>piwik.png</icon>
	<lien>http://www.spip-contrib.net/?article2860</lien>
	<prefix>
	piwik
	</prefix>
	<pipeline>
		<nom>insert_head</nom>
		<inclure>piwik_pipelines.php</inclure>
	</pipeline>
	<pipeline>
		<nom>header_prive</nom>
		<inclure>piwik_pipelines.php</inclure>
	</pipeline>
	<necessite id="SPIP" version="[2.0.8;]" />
	<necessite id='cfg' version='[1.13.0;]' />
	<necessite id='saisies' version='[1.1;]' />
