	<!--  Déclarer la structure des tables et ajouter un statut épuisé aux produits -->
	<pipeline nom="declarer_tables_objets_sql" inclure="base/stocks.php" />
	<pipeline nom="declarer_tables_interfaces" inclure="base/stocks.php" />
